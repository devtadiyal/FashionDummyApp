<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".guesttt.GuestTTActivity">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerInside"
                android:src="@drawable/back1x" />

            <com.logzero.necommerce.ui.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="My Wishlist"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_5sdp"
                android:src="@drawable/white_option1x"
                android:visibility="gone" />
        </RelativeLayout>


        <ru.nikartm.support.ImageBadgeView
            android:id="@+id/iv_addtocart"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            app:ibv_badgeValue="0"
            app:ibv_badgeTextSize="13sp"
            app:ibv_fixedBadgeRadius="12dp"
            android:layout_toLeftOf="@+id/iv_notification"
            app:ibv_badgeTextColor="#ffffff"
            app:ibv_badgeColor="@color/green"
            android:visibility="gone"
            app:ibv_badgeLimitValue="false"
            android:tint="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/notification"
            />
        <com.logzero.necommerce.ui.MediumTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/iv_addtocart"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_17sdp"
            android:layout_height="wrap_content"
            android:text="Your wishlist is empty"/>

        <com.logzero.necommerce.ui.RegularTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/text"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"
            android:text="Save items that you like in your wislist.\n Review them anytime and easily move \n them to the bag."/>

        <Button
            android:id="@+id/submit"
            android:layout_below="@+id/text1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/button_selector2"
            android:text="SHOP NOW"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>

</ScrollView>