<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="centerInside"
            android:src="@drawable/back1x" />

        <com.logzero.necommerce.ui.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Product Details"
            android:visibility="gone"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <AutoCompleteTextView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_toLeftOf="@+id/iv_addtocart"
            android:drawablePadding="@dimen/_25sdp"
            android:dropDownWidth="wrap_content"
            android:dropDownVerticalOffset="5dp"
            android:ems="10"
            android:hint=""
            android:textCursorDrawable="@null"
            android:cursorVisible="true"
            android:imeOptions="actionSearch"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="textAutoComplete|textAutoCorrect"
            android:paddingRight="@dimen/_25sdp"
            android:popupBackground="@color/white"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white">

            <requestFocus />
        </AutoCompleteTextView>


        <ImageView
            android:id="@+id/search"
            android:layout_toLeftOf="@+id/cart"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/search"
            />

        <ru.nikartm.support.ImageBadgeView
            android:id="@+id/cart"
            android:layout_toLeftOf="@+id/notification"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/addtocart"
            app:ibv_badgeColor="@color/green"
            app:ibv_badgeLimitValue="false"
            app:ibv_badgeTextColor="#ffffff"
            app:ibv_badgeTextSize="8sp"
            app:ibv_badgeValue="2"
            app:ibv_fixedBadgeRadius="6dp" />


        <ImageView
            android:id="@+id/notification"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/notification"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_below="@+id/toolbar">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_alignParentTop="true" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            app:tabBackground="@drawable/indicator_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enquiry"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:gravity="center"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:srcCompat="@drawable/heart1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_below="@+id/enquiry"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center">

        <ImageView
            android:id="@+id/shareproduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:srcCompat="@drawable/link_detail" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/share"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:srcCompat="@drawable/addtocart1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_isenquir"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_below="@+id/contact"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:padding="@dimen/_6sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="20" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_viewpager"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.logzero.necommerce.ui.MediumTextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:singleLine="false"
                    android:text="Trilok Fab Anarkali Gown"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />


                <com.logzero.necommerce.ui.MediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="$356"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="RtlCompat" />

                <com.logzero.necommerce.ui.MediumTextView
                    android:id="@+id/discountprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="$1399"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_11sdp" />

                <com.logzero.necommerce.ui.MediumTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="65% off"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <com.logzero.necommerce.ui.MediumTextView
                        android:id="@+id/productsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="Size Available"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/rating"
                        android:gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:text=" 3.4 â­"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/sizechart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/small"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="S"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp" />


                    <Button
                        android:id="@+id/medium"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="M"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp" />

                    <Button
                        android:id="@+id/large"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="L"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp" />

                    <Button
                        android:id="@+id/xlarge"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="XL"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp" />

                    <Button
                        android:id="@+id/xxlarge"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="XXL"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:id="@+id/llll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sizechart"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <com.logzero.necommerce.ui.MediumTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="2"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="Description: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />


                    <com.logzero.necommerce.ui.RegularTextView
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llll"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text=" Fabric/Material : Benglory Silk\n
Accompaniments: comes with duptta\n
Work : Embroidered\n Size: Free Size\n
Wash care: Hand wash is recommended"
                        android:textColor="@color/black" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:weightSum="2">

        <com.logzero.necommerce.ui.RegularTextView
            android:id="@+id/addtocart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="Add To Cart"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <com.logzero.necommerce.ui.RegularTextView
            android:id="@+id/buynow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="Buy now"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>