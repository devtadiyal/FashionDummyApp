<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".guesttt.GuestTTActivity">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerInside"
                android:src="@drawable/back1x" />

            <com.logzero.necommerce.ui.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Payment"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_5sdp"
                android:src="@drawable/white_option1x"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/feedback_color"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:background="@drawable/button_selector3"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <RelativeLayout
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">

                    <ImageView
                        android:id="@+id/wallet"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/wallet"
                        android:tint="@color/colorPrimary" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:id="@+id/wallettext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/wallet"
                        android:text="Wallet"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wallettext"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/wallet"
                        android:text="Current Balance: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/walletimage"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/rightarrow" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_below="@+id/first"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/paypal"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/paypal"
                        android:tint="@color/colorPrimary" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:id="@+id/paypaltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/paypal"
                        android:text="Paypal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/paypaltext"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/paypal"
                        android:text="rihanakhan@gmail.com "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/paypalimage"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/rightarrow" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/third"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_below="@+id/second"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/visa"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/visa"
                        android:tint="@color/colorPrimary" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:id="@+id/visatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/visa"
                        android:text="Visa"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <com.logzero.necommerce.ui.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/visatext"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@+id/visa"
                        android:text="**********5670 "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/visaimage"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/rightarrow" />

                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_7sdp"
                android:background="@drawable/button_selector3">

                <ImageView
                    android:id="@+id/newpay"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/plus"
                    android:tint="@color/colorPrimary" />

                <com.logzero.necommerce.ui.RegularTextView
                    android:id="@+id/newpaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_toRightOf="@+id/newpay"
                    android:text="Add New Payment Method"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp" />


                <ImageView
                    android:id="@+id/newpayimage"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/rightarrow"
                    android:visibility="gone" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/fifth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_7sdp"
                android:background="@drawable/button_selector3"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:src="@drawable/card1" />

                <ImageView
                    android:id="@+id/paymenttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/payment"
                    android:layout_weight="1"
                    android:src="@drawable/card2" />


                <ImageView
                    android:id="@+id/paymentimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:src="@drawable/card3" />

            </LinearLayout>


            <com.logzero.necommerce.ui.RegularTextView
                android:id="@+id/paynow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_selector2"
                android:text="Pay Now"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>