<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent">


    <com.logzero.necommerce.ui.RegularTextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Size"/>

    <LinearLayout
        android:id="@+id/sizechart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_26sdp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/small"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="S"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />


        <Button
            android:id="@+id/medium"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="M"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />

        <Button
            android:id="@+id/large"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="L"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />

        <Button
            android:id="@+id/xlarge"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="XL"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />

        <Button
            android:id="@+id/xxlarge"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="XXL"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


    <com.logzero.necommerce.ui.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Color"/>

    <com.logzero.necommerce.ui.RegularTextView
        android:id="@+id/custrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Customer Rating"/>

    <LinearLayout
        android:id="@+id/customer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="4 * &amp; above"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />


        <Button
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="3 * &amp; above"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />

        <Button
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="2 * &amp; above"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />

        <Button
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:maxLines="2"
            android:singleLine="false"
            android:text="1 * &amp; above"
            android:textColor="@color/red"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>

    <com.logzero.necommerce.ui.RegularTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Price Range"/>


    <!-- seekbar option 1 -->
    <RelativeLayout
        android:id="@+id/prierange"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clipChildren="false">

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/rangeSeekbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textMin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@id/rangeSeekbar1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/textMax1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@id/rangeSeekbar1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <com.logzero.necommerce.ui.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Discount"/>

    <com.logzero.necommerce.ui.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Delivery Time"/>

</LinearLayout>
